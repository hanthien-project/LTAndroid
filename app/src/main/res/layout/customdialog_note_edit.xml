<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="Note Form"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etxtText_EditNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:hint="Enter note name"
        android:ems="10"
        android:inputType="text" />

    <Spinner
        android:id="@+id/spnCategory_EditNote"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="40dp" />
    <Spinner
        android:id="@+id/spnPriority_EditNote"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="40dp"/>
    <Spinner
        android:id="@+id/spnStatus_EditNote"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/txtvTitle_PlanDate_EditNote"
            android:layout_width="208dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Select Plan Date"
            android:textSize="20dp"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btn3cham_EditNote"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="74dp"
            android:background="@color/black"
            android:gravity="center"
            android:text="..."
            android:textAlignment="center"
            android:textColor="@android:color/white" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/btnChange_EditNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/black"
            android:text="Change"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnClose_EditNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:background="@color/black"
            android:layout_alignParentRight="true"
            android:text="Close"

            android:textColor="@android:color/white" />
    </RelativeLayout>



</LinearLayout>
